
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["./common/*"]
    }
  },
  "include": ["index.ts", "common/**/*", "utils/**/*", "validation/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "../services/**/*"]
}