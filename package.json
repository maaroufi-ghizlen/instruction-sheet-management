{
  "name": "instruction-sheet-management",
  "version": "1.0.0",
  "description": "Enterprise-grade instruction sheet management system",
  "workspaces": [
    "shared",
    "services/*",
    "services/auth-service"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:services",
    "install:services": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "start:auth": "npm run start:dev --workspace=services/auth-service",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^18.19.8",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "tsconfig-paths": "^4.2.0"
  }
}
